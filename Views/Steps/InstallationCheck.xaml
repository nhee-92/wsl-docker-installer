<views:BaseStep x:Class="wsl_docker_installer.Views.Steps.InstallationCheck"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:views="clr-namespace:wsl_docker_installer.Views.Steps"
                xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal" Margin="10" x:Name="StatusPanel">
            <mah:ProgressRing Width="14" Height="14" IsActive="True" x:Name="ProgressSpinner" Margin="0,0,10,0"/>
            <TextBlock Text="Check WSL installation..." FontSize="11" VerticalAlignment="Center" x:Name="StatusText"/>
        </StackPanel>
    </Grid>
</views:BaseStep>