<views:BaseStep x:Class="wsl_docker_installer.Views.Steps.WslInstallationCheck"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:views="clr-namespace:wsl_docker_installer.Views.Steps"
                xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls">
    <Grid>
        <StackPanel   HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal" Margin="10" x:Name="StatusPanel">
            <TextBlock Text="Status: " FontSize="11" VerticalAlignment="Center" x:Name="StatusKey"/>
            <TextBlock Text="Check WSL installation..." FontSize="11" VerticalAlignment="Center" x:Name="StatusValue"/>
            <mah:ProgressRing Width="14" Height="14" IsActive="True" x:Name="ProgressSpinner" Margin="10,0,10,0"/>
        </StackPanel>
    </Grid>
</views:BaseStep>