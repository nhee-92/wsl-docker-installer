<UserControl x:Class="wsl_docker_installer.Views.Header.HeaderControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="root"
             Height="50"
             Background="White"
             BorderBrush="Gray"
             BorderThickness="0,0,0,1">
	
	<StackPanel Orientation="Vertical"
			HorizontalAlignment="Left"
			Grid.Column="1">
		<TextBlock Text="{Binding Title, ElementName=root}" FontSize="15" Margin="5 5 0 0" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBlock Text="{Binding Subtitle, ElementName=root}" FontSize="11" Margin="10 5 0 0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
	</StackPanel>
	
</UserControl>