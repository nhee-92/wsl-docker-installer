<Window x:Class="wsl_docker_installer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:wsl_docker_installer"
        Title="WSL Docker Installer"
        Width="600" Height="400"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow"
        SizeToContent="Manual" >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition />
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Height="50" Background="White" BorderBrush="Gray" BorderThickness="0,0,0,1" VerticalAlignment="Center">
            <StackPanel Orientation="Vertical"
                        HorizontalAlignment="Left"
                        Grid.Column="1">
                <TextBlock Text="Information" FontSize="15" Margin="5 5 0 0" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                <TextBlock Text="Please read the following important information before continuing." FontSize="11" Margin="10 5 0 0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            </StackPanel>
        </Border>

        <!-- Bereich für wechselnde UserControls -->
        <Grid Grid.Row="1" Background="#F9F9F9" >
            <ContentControl x:Name="StepContent"/>
        </Grid>

        <!-- Footer ausgelagert -->
        <local:FooterControl Grid.Row="2" x:Name="Footer"
                             NextClicked="Footer_NextClicked"
                             CancelClicked="Footer_CancelClicked"/>
    </Grid>
</Window>
